<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.onpoint</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="70"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="FTP Seba" string="FTP Seba" data-key="onpoint_monitoring">
                    <h2>FTP Seba Logger</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="default_name"/>
                                <span class="fa fa-lg fa-building-o" title="Values set here are company-specific."/>
                                <div class="row">
                                    <div class="text-muted col-md-8">
                                        Set hostname
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="default_name"
                                            class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="onpoint_config_settings_action" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'onpoint_monitoring'}</field>
    </record>

    <menuitem id="onpoint_menu_configuration"
        name="Settings"
        sequence="0"
        action="onpoint_config_settings_action"
        groups="base.group_system"/>
</odoo>
